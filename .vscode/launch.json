{
  "version": "0.2.0",
  "configurations": [{
    "name": "Chrome",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:3000",
    "webRoot": "${workspaceRoot}/src",
    "sourceMapPathOverrides": {
      "webpack:///src/*": "${webRoot}/*"
    }
  },
    {
   "name": "Debug Tests",
   "type": "node",
   "request": "launch",
   "runtimeExecutable": "${workspaceRoot}/block-display/node_modules/.bin/react-scripts",      
   "args": [
     "test",
     "--runInBand",
     "--no-cache",
     "--env=jsdom"
   ],
   "cwd": "${workspaceRoot}/block-display",
   "protocol": "inspector",
   "console": "integratedTerminal",
   "internalConsoleOptions": "neverOpen"
 }
]}